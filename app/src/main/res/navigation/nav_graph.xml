<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.fittrack.DashboardFragment"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_workoutsFragment2"
            app:destination="@id/workoutsFragment2" />

        <action
            android:id="@+id/action_dashboardFragment_to_workoutDetailsFragment"
            app:destination="@id/workoutDetailsFragment" />

    </fragment>


    <fragment
        android:id="@+id/workoutsFragment2"
        android:name="com.example.fittrack.WorkoutsFragment"
        tools:layout="@layout/fragment_workouts">

        <argument
            android:name="workoutType"
            app:argType="string"
            android:defaultValue="run" />

    </fragment>


    <fragment
        android:id="@+id/workoutDetailsFragment"
        android:name="com.example.fittrack.WorkoutDetailsFragment"
        tools:layout="@layout/fragment_workout_details">

        <action
            android:id="@+id/action_workoutDetailsFragment_to_workoutsFragment2"
            app:destination="@id/workoutsFragment2" />

        <action
            android:id="@+id/action_to_MapFragment"
            app:destination="@id/mapFragment" />

    </fragment>


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.fittrack.MapFragment"
        android:label="Map">

        <argument
            android:name="workoutId"
            app:argType="long" />

    </fragment>

</navigation>
