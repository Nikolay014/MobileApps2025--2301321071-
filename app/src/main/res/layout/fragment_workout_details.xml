<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3FF"
    android:padding="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white" />

        <!-- Карта / картичка -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            android:clipToPadding="false"
            android:clipToOutline="false">

            <!-- Заглавие -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заглавие"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2C1348"
                android:paddingBottom="8dp" />

            <!-- Тип + дата в по-малък шрифт -->
            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тип: run"
                android:textSize="16sp"
                android:textColor="#5E5A78"
                android:gravity="center"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18.11.2025 15:54"
                android:textSize="14sp"
                android:textColor="#8A869A"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <!-- тънка линия -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0DEEA"
                android:layout_marginBottom="12dp" />

            <!-- Допълнителни данни (дистанция / серии / продължителност) -->
            <TextView
                android:id="@+id/tvExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дистанция: 5 км\nПродължителност: 30 мин"
                android:textSize="16sp"
                android:textColor="#2C1348"
                android:paddingBottom="16dp" />

            <!-- Заглавие за бележки -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бележки"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C1348"
                android:paddingBottom="4dp" />

            <!-- Бележки -->
            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тук ще се покажат бележките за тренировката."
                android:textSize="15sp"
                android:textColor="#5E5A78"
                android:paddingBottom="4dp" />
            <Button
                android:id="@+id/btnViewOnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View on Map" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">




            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#D32F2F"
                android:text="Delete"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
